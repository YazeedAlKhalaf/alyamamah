    "module": "CommonJS",
    "target": "ES2020",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true // because unleash-server has some issues.
  },
  "exclude": ["dist"]
}
