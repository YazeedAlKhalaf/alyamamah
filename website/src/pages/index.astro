---
import Layout from "../layouts/Layout.astro";
import DownloadButtons from "../components/DownloadButtons.astro";
import { features } from "../data/features";
---

<Layout title="Best Student Companion">
  <section
    class="py-5 px-5 flex flex-col md:flex-row items-center gap-8 md:gap-10"
  >
    <img
      src="/logo-rounded.png"
      class="w-64 h-64 drop-shadow-xl rounded-full"
      alt="Al Yamamah logo with rounded corners"
    />
    <div>
      <h1 class="text-4xl font-bold mb-2">Al Yamamah App</h1>
      <p class="text-xl mb-2">The app every student dreams of!</p>
      <p class="text-md text-gray-400 mb-4">Your ultimate companion ðŸ˜‰</p>
      <DownloadButtons />
    </div>
  </section>

  <section class="py-5 px-5 grid grid-cols-1 md:grid-cols-3 gap-6">
    <h2 class="text-3xl font-bold mb-6 col-span-full text-center">
      App Features
    </h2>
    {
      features.map((feature) => (
        <article
          class="flex flex-col items-center gap-4 p-4 bg-gradient-to-tr from-orange-100 to-orange-50 border border-orange-200 rounded-2xl shadow-lg transform transition-transform duration-300 hover:scale-105 hover:shadow-xl text-center"
          role="listitem"
          aria-label={feature.title}
        >
          <span class="text-4xl mb-3">{feature.icon}</span>
          <h2 class="text-2xl font-medium mb-2">{feature.title}</h2>
          <p class="text-gray-400">{feature.description}</p>
        </article>
      ))
    }
  </section>
</Layout>
